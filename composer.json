{
  "name": "blsv-space/inquisition-php-bootstrap",
  "version": "0.1.0",
  "type": "project",
  "description": "Bootstrap template for Inquisition PHP framework",
  "license": "MIT",
  "require": {
    "php": "^8.4",
    "ext-pdo": "*",
    "blsv-space/inquisition-php": "^0.1.0"
  },
  "require-dev": {
    "fakerphp/faker": "1.24",
    "phpunit/phpunit": "12.3"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/",
      "Tests\\": "tests/"
    },
    "files": [
    ]
  },
  "bin": [
    "console"
  ],
  "scripts": {
    "test": "phpunit",
    "post-create-project-cmd": [
      "@php -r \"file_exists('.env') || copy('.env.default', '.env');\"",
      "@php -r \"file_exists('.env.test') || copy('.env.test.default', '.env.test');\"",
      "@php scripts/generate-secrets.php",
      "@php -r \"echo '\\n\\033[32mProject created successfully!\\033[0m\\n';\"",
      "@php -r \"echo '\\n\\033[33mNext steps:\\033[0m\\n';\"",
      "@php -r \"echo '1. Edit composer.json (name, description, authors)\\n';\"",
      "@php -r \"echo '2. Configure your .env file\\n';\"",
      "@php -r \"echo '3. Run ./console to see available commands\\n\\n';\""
    ]
  },

  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "phpstan/extension-installer": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/blsv-space/inquisition-php.git"
    }
  ]
}
